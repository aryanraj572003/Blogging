<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>
      <%= author.fullName %>'s Profile | Blogify
    </title>
</head>

<body style="min-height:100vh;">
  <%- include('./partials/nav') %>
    <div class="container py-3 col-lg-8">

      <!-- Author Profile Header -->
      <div class="author-profile p-5 mb-5 bg-light border rounded-4 border-black">
        <div class="row align-items-center">
          <div class="col-md-3 text-center mb-4 mb-md-0">
            <img src="<%= author.profileImageURL || '/images/default.png' %>" alt="<%= author.fullName %>"
              class="rounded-circle" style="width: 180px; height: 180px; object-fit: cover;">
          </div>
          <div class="col-md-9">
            <h1 class="mb-4 fw-bold">
              <%= author.fullName %>
            </h1>
            <p class="lead mb-3">
              <i class="bi bi-envelope"></i>
              <%= author.email %>
            </p>
            <p class="text-muted mb-3">
              <i class="bi bi-calendar3"></i> Member since <%= new Date(author.createdAt).toLocaleDateString() %>
            </p>
            <% if (locals.user && locals.user._id===author._id.toString()) { %>
              <span class="badge bg-dark rounded-2 px-3 py-2">This is your profile</span>
              <% } %>
          </div>
        </div>
      </div>

      <!-- Author's Blogs -->
      <h2 class="mb-5 fw-bold">
        <% if (blogs.length> 0) { %>
          Posts (<%= blogs.length %>)
            <% } else { %>
              No posts yet
              <% } %>
      </h2>

      <% if (blogs.length===0) { %>
        <div class="alert alert-light border rounded-4 border-black">
          <% if (locals.user && locals.user._id===author._id.toString()) { %>
            You haven't published any posts yet. <a href="/blog/add-new" class="alert-link text-dark">Create your first
              post!</a>
            <% } else { %>
              <%= author.fullName %> hasn't published any posts yet.
                <% } %>
        </div>
        <% } else { %>
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% blogs.forEach(blog=> { %>
              <div class="col">
                <div class="card blog-card h-100 border border-black rounded-4">
                  <img src="<%= blog.coverImageURL %>" class="card-img-top blog-card-img" alt="<%= blog.title %>">
                  <div class="card-body d-flex flex-column p-4">
                    <div class="d-flex align-items-center gap-2 mb-2">
                      <span class="badge bg-dark rounded-1 small">
                        <%= blog.category %>
                      </span>
                      <span class="rounded-0 px-2 py-1 small text-danger">
                        <i class="bi bi-heart"></i>
                        <%= blog.likes ? blog.likes.length : 0 %>
                      </span>
                    </div>
                    <h5 class="card-title fw-bold mb-3">
                      <%= blog.title %>
                    </h5>

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                      <small class="text-muted">
                        <%= new Date(blog.createdAt).toLocaleDateString() %>
                      </small>
                      <a href="/blog/<%= blog._id %>" class="btn btn-dark btn-sm rounded-2 text-uppercase">Read</a>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>
          <% } %>
    </div>
    <%- include('./partials/script') %>
</body>

</html>